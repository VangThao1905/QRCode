<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/upload_image48"
        android:id="@+id/imgBtnTaiAnhLen"
        android:layout_centerHorizontal="true"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <ImageView
        android:layout_below="@id/imgBtnTaiAnhLen"
        android:src="@drawable/noimage"
        android:id="@+id/imgViewHinhQuyet"
        android:scaleType="fitXY"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="250dp"/>

    <Button
        android:id="@+id/btnBatDauQuyet"
        android:text="Bắt đầu  quyét"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/imgViewHinhQuyet"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_margin="8dp"
        android:text="Kết Quả:"
        android:layout_below="@id/btnBatDauQuyet"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtChuKetQua_QuyetAnh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="#000"
        android:layout_margin="8dp"
        android:text="Kết Quả"
        android:layout_below="@id/txtChuKetQua_QuyetAnh"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtKetQua_QuyetAnh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>